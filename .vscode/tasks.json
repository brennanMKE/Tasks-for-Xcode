{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "isShellCommand": true,
  "showOutput": "always",
  "command": "sh",
  "args": [
    "-c"
  ],
  "tasks": [
    {
      "taskName": "A: build",
      "suppressTaskName": true,
      "isBuildCommand": true,
      "args": [
        "${workspaceRoot}/tasks.sh build"
      ]
    },
    {
      "taskName": "B: test",
      "suppressTaskName": true,
      "isBuildCommand": false,
      "args": [
        "${workspaceRoot}/tasks.sh test"
      ]
    },
    {
      "taskName": "C: clean",
      "suppressTaskName": true,
      "isBuildCommand": false,
      "args": [
        "${workspaceRoot}/tasks.sh clean"
      ]
    },
    {
      "taskName": "D: setup",
      "suppressTaskName": true,
      "isBuildCommand": false,
      "args": [
        "${workspaceRoot}/tasks.sh setup"
      ]
    },
    {
      "taskName": "E: bundle-install",
      "suppressTaskName": true,
      "isBuildCommand": false,
      "args": [
        "${workspaceRoot}/tasks.sh bundle-install"
      ]
    },
    {
      "taskName": "F: pod-install",
      "suppressTaskName": true,
      "isBuildCommand": false,
      "args": [
        "${workspaceRoot}/tasks.sh pod-install"
      ]
    },
    {
      "taskName": "G: pod-update",
      "suppressTaskName": true,
      "isBuildCommand": false,
      "args": [
        "${workspaceRoot}/tasks.sh pod-update"
      ]
    }
  ]
}